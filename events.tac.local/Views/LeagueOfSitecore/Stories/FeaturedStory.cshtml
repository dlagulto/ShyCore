@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    string URL = Sitecore.Links.LinkManager.GetItemUrl(Model.Item);
}
<div class="thumbnail well">
    <a href="@URL">
        @Html.Sitecore().Field("DecorationBanner", new { @class = "img-fluid; max-width:100%; height: auto;",mw = 500, mh = 333, DisableWebEdit = true })
    </a>
    <div class="caption">
        <h3 class="teaser-heading">@Html.Sitecore().Field("ContentSubHeading")</h3>
        <p>
            @Html.Sitecore().Field("SectionHeader")
        </p>
        <a href="@URL" class="btn btn-default">Read more</a>
    </div>
</div>
